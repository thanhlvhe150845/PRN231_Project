@page
@model ManageRestaurantsClient.Pages.Users.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <style>
        body {
            background: url('/img/background.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .login-container {
            margin-top: 10%;
        }

        .login-box {
            padding: 40px;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            border-radius: 10px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-social {
            width: 40px;
            height: 40px;
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-md-4 login-box">
                <h2 class="text-center">Login Now</h2>
                @if (!string.IsNullOrEmpty(Model.User?.Message))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.User.Message
                    </div>
                }
                <form method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="User.Email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="User.Password" class="form-control" required>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">LOGIN</button>
                    </div>
                    <div class="form-group text-center">
                        <a href="#">Forgot Password? Click here</a><br>
                        <a href="/Users/Register">New User? Register here</a>
                    </div>
                </form>
                <div class="text-center">
                    <p>Or Login with</p>
                    <button class="btn btn-social btn-facebook">FB</button>
                    <button class="btn btn-social btn-twitter">TW</button>
                    <button class="btn btn-social btn-pinterest">PI</button>
                    <button class="btn btn-social btn-linkedin">LI</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
        @if (TempData["Message"] != null)
        {
            <text>
                    toastr.success("@TempData["Message"]");
            </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>
                    toastr.error("@TempData["Error"]");
            </text>
        }
        @if (!string.IsNullOrEmpty(Model.User?.Message))
        {
            <text>
                    toastr.error("@Model.User.Message");
            </text>
        }
                });
    </script>

</body>
</html>
